<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornflowerblue"
    tools:context=".patientinterface.CalendarProgramare">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Calendar programare"
        app:titleMarginStart="90dp" />


    <EditText
        android:id="@+id/textDateHour"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_below="@+id/toolbarCalendar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="32dp"
        android:hint="SELECT DATE AND HOUR" />

    <EditText
        android:id="@+id/textDate"
        android:hint="SELECT DATE"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textDateHour"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp" />

    <EditText
        android:id="@+id/textHour"
        android:hint="SELECT HOUR"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="33dp" />

    <Button
        android:id="@+id/btnAdaugaProgramare"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:layout_below="@+id/textHour"
        android:layout_alignParentStart="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="42dp"
        android:text="Adauga programare" />


</RelativeLayout>