<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/cornflowerblue"
    tools:context=".logininterface.PatientInterface">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPaginaPacient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/titlu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:title="Pagina Pacient"
        app:titleMarginStart="85dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/titlu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="157dp"
        android:text="M-Health"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butonProgramareConsultatie"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="14dp"
        android:text="Programare consultatie"
        app:layout_constraintBottom_toTopOf="@+id/butonUrgentaMedicala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlu4" />
    android:onClick="logout"/>

    <Button
        android:id="@+id/butonUrgentaMedicala"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="14dp"
        android:text="Urgenta medicala"
        app:layout_constraintBottom_toTopOf="@+id/butonFisaMedicala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonProgramareConsultatie" />

    <Button
        android:id="@+id/butonFisaMedicala"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="16dp"
        android:text="Fisa Medicala"
        app:layout_constraintBottom_toTopOf="@+id/butonMedicamente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonUrgentaMedicala" />

    <Button
        android:id="@+id/butonMedicamente"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="352dp"
        android:text="Medicamente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonFisaMedicala" />

    <Button
        android:id="@+id/btnDeconectare"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="257dp"
        android:background="@color/red"
        android:backgroundTint="@color/red"
        android:text="Deconectare"
        app:iconTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonMedicamente"
        app:rippleColor="@color/red"
        app:strokeColor="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>